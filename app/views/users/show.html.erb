<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
     <div>
      <%= image_tag @user.get_profile_image(100,100) %>
     </div>
    <table class="table">
     <tbody>
      <tr></tr>
       <tr>     
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>
      <div class="row">
       <% if @user == current_user %>
       <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
     <% end %> 
    </div>

    <h2 class="mt-3">New book</h2>

    <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

<%= form_with model: @book do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div class="actions">
  <%= f.submit 'Create Book', style: "background-color: green; color: white; padding: 10px 20px; border: none; border-radius: 5px;" %>
  </div>
<% end %>