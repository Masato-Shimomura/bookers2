<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">
<%= render 'list', user: @book.user %>
<%= render 'form', book: @new_book %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
 <table class="table">
  <tbody>
   <tr>
    <td>
    <%= link_to user_path(@book.user.id) do %>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <p><%= link_to @book.user.name, user_path(@book.user) %></p>
    <% end %>
    </td>
    <td>
    <%= link_to book_path(@book) do %>
      <p><%= @book.title %></p>
    <% end %>
    </td>
    <td>
     <p><%= @book.body %></p>
    </td>
      <td>
      <% if @book.user == current_user %>
        <%= link_to 'Edit', edit_book_path(@book), style: "background-color: green; color: white; padding: 10px 20px; border: none; border-radius: 5px;" %>
       <% end %>
      </td>
      <td>
      <% if @book.user == current_user %>
       <%= link_to 'Delete', book_path(@book), style: "background-color: red; color: white; padding: 10px 20px; border: none; border-radius: 5px;", method: :delete, data: { confirm: '本当に消しますか?' } %>
      <% end %>
      </td>  
   </tr>
  </tbody>
 </table>
 </div>
 </div>
</div>  
</main>



