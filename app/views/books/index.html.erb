<% @books.each do |book| %>

<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <tr>
       <td>
       <% if @user %>
       <%= link_to user_path(@user.id) do %>
        <%= image_tag @user.get_profile_image(100,100) %>
       <% end %>
        <% end %>
       </td>
       <td>
       <%= link_to book_path(book) do %>
        <p><%= book.title %></p>
       <% end %>
       </td>
       <td>
       <p><%= book.body %></p>
       </td>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
 </div>
</main>      
<% end %>