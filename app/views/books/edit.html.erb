<main>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>Editing Book</h2>
   <% if @book.errors.any? %>
   <%= @book.errors.count %>件のerrorが発生しました
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
     <%= form_with model: @book do |f| %>
     <div class="form-group"> 
     <label for="inputTitle">Title</label>
     <div>
     <%= f.text_field :title, autofocus: true, id: "inputTitle", placeholder:"タイトル" %>
     </div>
     </div>
     <div class="form-group">
     <label for="inputOpinion">Opinion</ladel>
     <div>
     <%= f.text_area :body, autofocus: true, id: "inputBody" %>
     </div>
     </div>
     <div class="form-group">
     <%= f.submit "Update Book", style: "background-color: green; color: white; padding: 10px 20px; border: none; border-radius: 5px;", class: "btn btn-secondary", "data-disable-with": "Update User" %>
     </div>
    <% end %>
    <div>
    <%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>
    </div>
   </div>
  </div>
 </div>
</main>    