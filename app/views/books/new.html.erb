<h1>New book</h1>

<%= form_with model: @book do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div class="actions">
  <%= f.submit 'Create Book', style: "background-color: green; color: white; padding: 10px 20px; border: none; border-radius: 5px;" %>
  </div>
<% end %>
